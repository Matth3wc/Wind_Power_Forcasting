# Environment configuration for Ireland Marine Intelligence Platform
# Copy this file to .env and fill in the values

# ============================================
# Database Configuration
# ============================================
# SQLite (default - no configuration needed)
DATABASE_URL=sqlite:///./marine_intel.db

# PostgreSQL with PostGIS (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/marine_intel
# POSTGRES_USER=marine_intel
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_DB=marine_intel

# ============================================
# ERDDAP Data Sources
# ============================================
# Marine Institute Ireland ERDDAP (primary source)
MARINE_IE_ERDDAP_URL=https://erddap.marine.ie/erddap
MARINE_IE_DATASET_ID=IWBNetwork

# Alternative backup sources
# MET_EIREANN_API_KEY=your_api_key_here

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
RELOAD=true

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# ============================================
# Data Collection Schedule
# ============================================
# Intervals in minutes
BUOY_UPDATE_INTERVAL=30
LIGHTHOUSE_UPDATE_INTERVAL=60
FORECAST_UPDATE_INTERVAL=360

# ============================================
# Model Configuration
# ============================================
# VAR model settings
VAR_MAX_LAGS=24
VAR_INFORMATION_CRITERION=aic
VAR_RETRAIN_INTERVAL_HOURS=6

# Forecast horizons (hours)
FORECAST_HORIZONS=6,12,24,48,72

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================
# WebSocket Configuration
# ============================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100
